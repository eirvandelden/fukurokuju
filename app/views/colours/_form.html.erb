<%= content_for :title, ( @colour.new_record? ? "Create a new colour" : @colour[ :name ] ) %>

<%= form_for( @colour, :html => { :class => 'form-horizontal' } ) do |f| %>
<% if @colour.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@colour.errors.count, "error") %> prohibited this colour from being saved:</h2>
    <ul>
        <% @colour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<fieldset>
    <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls"><%= f.text_field :name %></div>
        </div>
    <div class="control-group">
        <%= f.label :hex_value, class: 'control-label' %></span>
        <div class="controls"><%= f.text_field :hex_value %></div>
    </div>
    <div class="control-group">
        <%= f.label :white_on_black, class: 'control-label' %></span>
        <div class="controls"><%= f.check_box :white_on_black %></div>
    </div>
    <div class="control-group">
        <div class="controls">
        <%= f.submit class: 'btn'  %>
        </div>
    </div>
</fieldset>
<% end %>
